<configuration>
    <springProperty scope="context" name="springAppName" source="spring.application.name" defaultValue="-" />
    <springProperty scope="context" name="version" source="application.version" defaultValue="-" />
    <appender name="consoleAppender" class="ch.qos.logback.core.ConsoleAppender">
        <encoder >
            <pattern>%d{HH:mm:ss.SSS} [${springAppName}] [${version}] [%X{x-cid:-}] [%X{traceId:-}] [%X{spanId:-}] [%t] %-5level %logger{36}.%M - %msg%n</pattern>
        </encoder>
    </appender>
    <logger name="org.springframework.boot.actuate" level="OFF"/>
    <logger name="vn.com.vpbank" additivity="false" level="DEBUG">
        <appender-ref ref="consoleAppender"/>
    </logger>
    <root level="INFO">
        <appender-ref ref="consoleAppender"/>
    </root>
</configuration>